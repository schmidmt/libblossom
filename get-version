THIS_DIR="$(dirname "$0")"

if [ -f "${THIS_DIR}/.dist-version" ]; then
  # Get the version from the file distributed in the tarball.
  version=$(cat "${THIS_DIR}/.dist-version")
elif [ -e "${THIS_DIR}/.git" ]; then
  # Ger the version from the git repository.
  version="$(git --git-dir="${THIS_DIR}/.git" --work-tree="${THIS_DIR}" describe --tags --always --match v[0-9]* 2> /dev/null | tr '-' '.')"

  # Check if we are on a dirty checkout.
  git --git-dir="${THIS_DIR}/.git" --work-tree="${THIS_DIR}" update-index --refresh -q >/dev/null
  dirty="$(git --git-dir="${THIS_DIR}/.git" --work-tree="${THIS_DIR}" diff-index --name-only HEAD 2>/dev/null)"
  if [ -n "$dirty" ]; then
    version="${version}.dirty"
  fi
  version="$(echo "$version" | sed 's/^v//g')"
else
  date +%F
fi

# Use printf to avoid the trailing new line that m4_esyscmd would not handle.
printf "%s" "$version"
